{
	"variables": {
		"aws_access_key_id": "{{ env `AWS_ACCESS_KEY_ID` }}",
		"aws_secret_access_key": "{{ env `AWS_SECRET_ACCESS_KEY` }}",
		"region": "{{ env `AWS_REGION` }}",
		"vpc_id": "{{ env `PACKER_VPC_ID` }}",
		"subnet_id": "{{ env `PACKER_SUBNET_ID` }}",
		"environment": "{{ env `PACKER_ENVIRONMENT` }}"
	},
	"builders": [{
		"type": "amazon-ebs",
		"access_key": "{{ user `aws_access_key_id` }}",
		"secret_key": "{{ user `aws_secret_access_key` }}",
		"region": "{{user `region`}}",
		"spot_price_auto_product": "Linux/UNIX (Amazon VPC)",

		"ssh_pty": true,
		"instance_type": "t2.medium",
		"vpc_id": "{{user `vpc_id` }}",
		"subnet_id": "{{user `subnet_id` }}",
		"associate_public_ip_address": true,

		"source_ami_filter": {
			"most_recent": true,
			"owners": ["self"],
			"filters": {
				"tag:System": "Terraform Enterprise",
				"tag:Component": "BaseAMI",
				"tag:OS": "Ubuntu-16.04"
			}
		},

		"ssh_username": "hashicorp",
		"ssh_timeout": "5m",

		"ami_virtualization_type": "hvm",
		"ami_description": "OpenVPN Server",
		"ami_name": "vault-server-{{isotime \"2006-01-02-1504\"}}",
		"tags": {
			"Name": "{{user `environment`}} Vault Server",
			"System": "Terraform Enterprise",
			"Component": "Vault",
			"OS": "Ubuntu-16.04"
		}
	}],
	"provisioners": [
		{
			"type": "shell",
			"start_retry_timeout": "10m",
			"inline": [
				"sudo mkdir -p /secrets",
				"echo 'tmpfs   /secrets         tmpfs   nodev,nosuid,noexec,size=8M      0  0' | sudo tee -a /etc/fstab",
				"sudo mount -a"
			]
		},
		{
			"type": "shell",
			"start_retry_timeout": "10m",
			"inline": [
				"DEBIAN_FRONTEND=noninteractive sudo apt-get update",
				"DEBIAN_FRONTEND=noninteractive sudo apt-get -y upgrade",
				"DEBIAN_FRONTEND=noninteractive sudo apt-get install -y consul-client-aws-ec2 vault-server-aws-ec2",
				"sudo systemctl enable consul.service",
				"sudo systemctl enable consul-online.service",
				"sudo systemctl enable consul-online.target",
				"sudo systemctl enable vault.service"
			]
		},
		{
			"type": "shell",
			"start_retry_timeout": "5m",
			"inline": [
				"sudo rm -rf /var/lib/cloud/instances/*",
				"sudo rm -f /root/.ssh/authorized_keys",
				"sudo rm -f /home/hashicorp/.ssh/authorized_keys"
			]
		}
	]
}
